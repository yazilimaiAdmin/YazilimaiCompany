@page "/AboutUs"
@using System.Globalization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SfResources> Localizer

<header class="bg-dark text-white text-center py-5">
    <h1 class="display-4">@Localizer["AboutUsPage"]</h1>
</header>

<section class="py-5 text-justify container">
    <p class="lead">@Localizer["AboutUsPage1"]</p>
</section>

<section class="container py-5">
    <div class="row text-center">
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <img src="images/coding.png" class="card-img-top img-fluid" alt="Software Development">
                <div class="card-body">
                    <h3 class="card-title">@Localizer["AboutUsPage2"]</h3>
                    <p class="card-text">@Localizer["AboutUsPage3"]</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
