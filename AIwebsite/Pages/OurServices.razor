<!-- Page Header -->
<div class="jumbotron text-center">
    <h1 class="display-4">@Localizer["OurServicesPage"]</h1>
    <p class="lead">@Localizer["OurServicesPage1"]</p>
</div>

<!-- Service Categories -->
<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <!-- Image representing Non-AI Projects, such as a diverse range of technology images to indicate a variety -->
                <img class="card-img-top" src="images/non-ai-projects.png" alt="Non-AI Projects">
                <div class="card-body">
                    <h5 class="card-title">@Localizer["OurServicesPage2"]</h5>
                    <p class="card-text">@Localizer["OurServicesPage3"]</p>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- AI Solutions -->
